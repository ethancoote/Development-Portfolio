---
const { text, href, id="primary" } = Astro.props;
---
{id === "primary" &&
    <a href={href} class="flex w-full sm:w-fit justify-center bg-neutral-200 px-6 py-2 rounded-md hover:shadow-[0_5px_23px_rgba(235,235,247,.4)] hover:text-neutral-500 hover:bg-neutral-50 transition duration-300 ease-in-out">
        <p class="font-semibold text-[20px]">{text}</p>
    </a>
}

{id === "secondary" && 
    <a href={href} class="flex w-full sm:w-fit justify-center px-6 py-2 rounded-md text-neutral-300 hover:shadow-[0_5px_23px_rgba(235,235,247,.4)] hover:text-neutral-50 transition duration-300 ease-in-out border-2">
        <p class="font-semibold text-[20px]">{text}</p>
    </a>
}
